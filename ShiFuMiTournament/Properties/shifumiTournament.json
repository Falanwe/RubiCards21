{
  "openapi": "3.0.1",
  "info": {
    "title": "My API",
    "version": "v1"
  },
  "paths": {
    "/ShiFuMi/game": {
      "get": {
        "tags": [
          "ShiFuMi"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/ShiFuMi/{gameId}": {
      "get": {
        "tags": [
          "ShiFuMi"
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoundState"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoundState"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoundState"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "ShiFuMi"
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IndividualPlay"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/IndividualPlay"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/IndividualPlay"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoundState"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoundState"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoundState"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ShiFuMi/{gameId}/result": {
      "get": {
        "tags": [
          "ShiFuMi"
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GameResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Game": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "playerId": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "roundsCount": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "GameResult": {
        "type": "object",
        "properties": {
          "isFinished": {
            "type": "boolean",
            "readOnly": true
          },
          "p1Won": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "p2Won": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "ties": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "IndividualPlay": {
        "type": "object",
        "properties": {
          "playerId": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "play": {
            "$ref": "#/components/schemas/Play"
          }
        },
        "additionalProperties": false
      },
      "Play": {
        "enum": [
          "Rock",
          "Paper",
          "Scissors"
        ],
        "type": "string"
      },
      "RoundState": {
        "enum": [
          "NoOnePlayed",
          "P1Played",
          "P2Played",
          "P1Won",
          "P2Won",
          "Tie"
        ],
        "type": "string"
      }
    }
  }
}